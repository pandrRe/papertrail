# fly.toml app configuration file generated for pt-app-server on 2026-01-16T18:43:54-03:00
#
# See https://fly.io/docs/reference/configuration/ for information about how to use this file.
#

app = 'pt-app-server'
primary_region = 'gru'

[build]
  dockerfile = 'Dockerfile'

[env]
  DB_PATH = '/data/openalex.duckdb'
  DENORM_PARQUET_PATH = '/data/parquet'
  LMDB_PATH = '/data/lmdb'
  PORT = '8888'

[[mounts]]
  source = 'pt_app_data'
  destination = '/data'
  initial_size = '150GB'

[http_service]
  internal_port = 8888
  force_https = true
  auto_stop_machines = 'stop'
  auto_start_machines = true
  min_machines_running = 0

[[vm]]
  memory = '8gb'
  cpu_kind = 'shared'
  cpus = 4
  memory_mb = 8192
